
<div class = "container">
 <div class = "row">
  
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
  
    <% if @book.errors.any? %>
    <div class="alert-box">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <h1 class="form-edit">Editing Book</h1> 
  
    <%= form_with(model: @book, url: book_path(@book), method: :put ,local: true) do |f| %>
      <div class="form-group">
          <%= f.label :title, 'Title' %>
          <%= f.text_field :title ,class: "form-control"%>
      </div>
      
      <div class="form-group">
        <%= f.label :body, 'Opinion' %>
        <%= f.text_area :body,class: "form-control" %>
      </div>
      <%= f.submit 'Update Book', class: "btn btn-success"%>
      
    <% end %>
    
      <%= link_to 'Show', book_path %>
      |
      <%= link_to 'Back', books_path %>
    </div>
 </div>
</div>
