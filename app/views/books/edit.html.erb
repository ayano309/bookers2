 <h2 class="form-edit">Editing Book</h2> 
  
  <% if @book.errors.any? %>
  <div class="alert-box">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with(model: @book, url: book_path(@book), method: :put ,local: true) do |f| %>
    <div>
      <%= f.label :title, 'Title' %>
    </div>
    
    <div>
      <%= f.text_field :title %>
    </div>
    
    <div>
      <%= f.label :body, 'Body' %>
    </div>
    
    <div>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Update Book'%>
    
  <% end %>
  
<%= link_to 'show', book_path(@book) %>
