<%= form_with(model: @user, url: user_path(@user), method: :put ,local: true) do |f| %>
  <h2>プロフィール編集</h2>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>


  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>

  <label for="inputIntroduction"></label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%><br>

  <%= f.submit "Update User" %>
<% end %>


