<div class = "container">
 <div class = "row">
  
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   
    
    <% if @user.errors.any? %>
      <div class="alert-box">
        <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <h2>User info</h2>

    <%= form_with(model: @user, url: user_path(@user), method: :put ,local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Name' %><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control"%><br>
      </div>
      
      <div class="form-group">
        <%= f.label :profile_image, 'Image' %><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
      </div>
      
      <div class="form-group">
        <%= f.label :introduction, 'Introduction' %><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" , class: "form-control"%><br>
      </div>
      <%= f.submit "Update User", class: "btn btn-secondary"%>
    <% end %>
  </div>
 </div>
</div>