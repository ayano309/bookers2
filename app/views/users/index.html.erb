
  
<%= render 'commons/common', book: @book, user: @user %>
<!--メイン-->

  <div class="col-md-8 offset-md-1">
    <table class="table">
  
      <h2>Users</h2>
       <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
       </thead>
  
    <% @users.each do |user| %>
      <tbody>
         <tr>
           <th><%= image_tag user.get_profile_image(100,100) %></th>
           <th> <%= user.name %></th>
           <th><%= link_to "Show", user_path(user) %></th>
         </tr>
      </tbody>
    <% end %>
    </table>
  </div>
  </div>
</div>
  

