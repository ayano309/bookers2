<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.introduction %>
</div>


<div class = "container">
 <div class = "row">
  <div class = "col-md-3">
    <h1 class=index-title>Users</h1>
    <table class="table">
      <tbody>
        <tr>
        <th><%= image_tag @user.get_profile_image(100,100) %></th>
        </tr>
    
        <tr>
        <th>neme : <%= @user.name %></th>
        </tr>
  
        <tr>
        <th>introduction <%= @user.introduction %></th>
        </tr>
  
        <tr>
        <th>
        <div class="row">
          <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fas fa-user-cog fa-w-20"></i>
          <% end %>
        </div>
        </th>
        </tr>
      </tbody>
    </table>



    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
    <% end %>




    <h1>New book</h1>
    <%= form_with model: @book, local:true do |f| %>
    
      <h4>title</h4>
      <%= f.text_field :title %>
    
      <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    
      <%= f.submit 'Create Book' %>
    <% end %>

  </div>

<!--メイン-->
    <div class = "col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
           <th></th>
           <th>title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
        </tr>
        </thead>
      
        <tbody>
          <% @books.each do |book| %>
            <tr>
             <th><%= link_to image_tag( @user.get_profile_image(100,100)), user_path(@user.id) %></th>
             <th><%= link_to book.title, book_path(book) %></th>
             <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>