


  <%= render 'commons/common', book: @book, user: @user %>
<!--メイン-->
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
           <th></th>
           <th>title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
        </tr>
        </thead>
      
        <tbody>
          <% @books.each do |book| %>
            <tr>
             <th><%= link_to image_tag( @user.get_profile_image(100,100)), user_path(@user.id) %></th>
             <th><%= link_to book.title, book_path(book) %></th>
             <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>